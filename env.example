# ============================================
# Flask 應用配置
# ============================================

# 應用密鑰（生產環境務必修改為隨機字符串）
SECRET_KEY=dev-secret-key-change-in-production

# 調試模式（True/False, 1/0, true/false）
# 生產環境請設為 False
DEBUG=False

# ============================================
# 數據庫配置
# ============================================

# 數據庫主機地址
DB_HOST=localhost

# 數據庫端口
DB_PORT=3306

# 數據庫用戶名
DB_USER=root

# 數據庫密碼（請修改為您的實際密碼）
DB_PASSWORD=

# 數據庫名稱
DB_NAME=food-stores

# ============================================
# SQLAlchemy 配置
# ============================================

# 是否輸出 SQL 語句到控制台（True/False）
# 開發時可設為 True，生產環境建議 False
SQLALCHEMY_ECHO=False

# ============================================
# Session 配置
# ============================================

# Session 有效期（天數）
SESSION_LIFETIME_DAYS=7

# ============================================
# SocketIO 配置
# ============================================

# SocketIO 異步模式（threading/eventlet/gevent）
SOCKETIO_ASYNC_MODE=threading

# SocketIO CORS 允許的來源（* 表示允許所有）
# 生產環境建議設置具體域名，如：https://yourdomain.com
SOCKETIO_CORS_ALLOWED_ORIGINS=*

# ============================================
# 環境配置
# ============================================

# Flask 環境（development/production）
FLASK_ENV=development

